@model IEnumerable<DAL.ManagerSet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<script type="text/javascript">
    onManagerListLoad = function () {
        $.get('@Url.Action("ManagerList", "Manager")', null,
           function (data, textStatus, jqXHR) {
               $("#managerList").html(data);
           });
    }

    onManagerListLoad();

    showManagerDetails = function () {
        $("#managerDetails").show();
    }

    hideManagerDetails = function () {
        $("#managerDetails").hide();
        $("#managerDetails").html(null);
    }
</script>

<section>
    <div id="ManagerList">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SecondName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>